<html lang="en">
  <%- include("./partials/head.ejs") %>
  <body>
    <%- include("./partials/navbar.ejs") %>
    <div class="container">
      <%- include("./partials/sidebar.ejs") %>
      <div class="messages-detail">
        <div class="message-details content">
          <h2><%= title %></h2>
          <br />
          <hr />
          <br />
          <div class="message-content">
            <% if (text) { %>
            <p class="message-text"><strong>Text:</strong> <%= text %></p>
            <br />
            <% } %> <% if (snippet) { %>
            <p class="message-snippet">
              <strong>Snippet:</strong> <%= snippet %>
            </p>
            <% } %>
            <br />
            <% if (message) { %>
            <p class="message-body">
              <strong>Full Message:</strong> <%= message %>
            </p>
            <br />
            <% } %>

            <div class="message-meta">
              <% if (user) { %>
              <p class="message-author"><strong>Author:</strong> <%= user %></p>
              <% } %> <% if (added) { %>
              <p class="message-date"><strong>Date:</strong> <%= added %></p>
              <% } %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <%-include('./partials/footer.ejs') %>
  </body>
</html>
